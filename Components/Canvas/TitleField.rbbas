#tag ClassProtected Class TitleFieldInherits Canvas	#tag Event		Sub Open()		  savedW = me.Width		  savedH = me.Height		  DrawBorder = true		End Sub	#tag EndEvent	#tag Event		Sub Paint(g As Graphics)		  'g.DrawPicture(gray_title, 0, 0)		  		  if (p=nil) or (savedW <> g.Width) or (savedH <> g.Height) then ComputeBackground(g.Width, g.Height)		  g.DrawPicture(p, 0, 0)		  		  'g.ForeColor = &cFFFFFF		  'g.Bold = true		  'g.TextSize = 12		  'g.TextFont = "System"		  'g.DrawString(Title, 13, g.TextHeight)		  		  g.ForeColor = &c333333		  g.Bold = true		  g.TextSize = 12		  g.TextFont = "System"		  g.DrawString(Title,14, g.TextHeight+1)		  		  'g.ForeColor = BorderColor		  'g.DrawRect(0, 0, g.Width, g.Height-1)		  		  		End Sub	#tag EndEvent	#tag Method, Flags = &h21		Private Sub ComputeBackground(w1 As Integer, h1 As Integer)		  Dim x, y, i, w, h, icol As Integer		  w = w1		  h = h1		  p = nil		  p = NewPicture(w, h, 32)		  		  // Border		  if (DrawBorder) then		    p.Graphics.ForeColor = RGB(179,179,179)		    p.Graphics.DrawRect(0,0,w,h)		    x = 1		    y = 1		    w = w -2		    h = h -2		  end if		  		  // Background		  p.Graphics.ForeColor = RGB(237,237,237)		  p.Graphics.DrawLine(x, y, w, y)		  y = 2		  icol = 228		  for i=y to h		    p.Graphics.ForeColor = RGB(icol,icol,icol)		    p.Graphics.DrawLine(x, i, w, i)		    icol = icol -1		  next		  		End Sub	#tag EndMethod	#tag Property, Flags = &h0		BackgroundColor As Color = &cDEDEDE	#tag EndProperty	#tag Property, Flags = &h0		BorderColor As Color = &c9c9b9b	#tag EndProperty	#tag Property, Flags = &h0		DrawBorder As Boolean = true	#tag EndProperty	#tag Property, Flags = &h21		Private p As Picture	#tag EndProperty	#tag Property, Flags = &h21		Private savedH As Integer	#tag EndProperty	#tag Property, Flags = &h21		Private savedW As Integer	#tag EndProperty	#tag Property, Flags = &h0		Title As String	#tag EndProperty	#tag Vie